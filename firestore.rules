rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User-specific data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public modules (read-only)
    match /modules/{moduleId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth.token.isAdmin == true;
    }

    // AI-generated content cache (24hr TTL)
    match /ai_cache/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.time < timestamp.value(request.resource.data.createdAt) + duration.value(24, 'hours');
    }
  }
}