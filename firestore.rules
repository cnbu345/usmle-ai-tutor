rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles (read/write by owner only)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Subcollections (explicitly defined)
      match /progress/{document} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Public modules (read-only)
    match /modules/{moduleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // AI cache (time-bound writes using expiresAt field)
    match /ai_cache/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.time < timestamp.value(request.resource.data.expiresAt);
    }
  }
}